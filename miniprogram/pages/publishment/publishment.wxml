<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-cells__group weui-cells__group_form" style="margin:50rpx auto;">
        <view class="weui-cells__title">公司信息</view>
		<view class="weui-cells__group weui-cells__group_form">
			<view class="weui-cells weui-cells_form">
				<view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">							
                        <label class="weui-label">公司名</label>
                    </view>
					<view class="weui-cell__bd">
						<input class="weui-input" placeholder="填写公司名" placeholder-class="weui-input__placeholder" type="text" maxlength="100" bindinput="companyInput" />
					</view>
				</view>
				<view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">							
                        <label class="weui-label">联系电话</label>
                    </view>
					<view class="weui-cell__bd">
						<input class="weui-input" placeholder="填写电话号码" placeholder-class="weui-input__placeholder" type="number" maxlength="11" bindinput="telInput" />
					</view>
				</view>
                <view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">							
                        <label class="weui-label">公司位置</label>
                    </view>
					<view class="weui-cell__bd">
						<input class="weui-input" placeholder="填写公司具体位置" placeholder-class="weui-input__placeholder" type="text" maxlength="100" bindinput="addressInput" />
					</view>
				</view>
			</view>
		</view>
	</view>
    <view class="weui-cells__group weui-cells__group_form" style="margin:50rpx auto;">
        <view class="weui-cells__title">岗位信息</view>
        <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-cells weui-cells_form">
                <view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">
                        <label class="weui-label">岗位名</label>
                    </view>
					<view class="weui-cell__bd">
						<input class="weui-input" placeholder="填写岗位名称" placeholder-class="weui-input__placeholder" type="text" maxlength="30" bindinput="jobsInput" />
					</view>
				</view>
                <view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">							
                        <label class="weui-label">薪资</label>
                    </view>
					<view class="weui-cell__bd" style="display:flex">
						<input style="flex:auto" class="weui-input" placeholder="填写薪资" placeholder-class="weui-input__placeholder" type="digit" maxlength="10" bindinput="salaryNumInput" />
                        <picker class="salary_picker" range="{{salaryPickerArray}}" bindchange="salaryPickerSelect">
                            <view>{{salaryWay}}</view>
                        </picker>
					</view>
				</view>
                <view class="weui-cell weui-cell_active">
					<view class="weui-cell__hd">							
                        <label class="weui-label">工作类型</label>
                    </view>
					<view class="weui-cell__bd">
						<radio-group bindchange="typeSelect">
                            <radio value="兼职">兼职</radio>
                            <radio value="全职">全职</radio>
                        </radio-group>
					</view>
				</view>
                <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-after">
					<view class="weui-cell__hd">
                        <label class="weui-label">学历要求</label>
                    </view>
					<view class="weui-cell__bd">
						<picker range="{{eduReqArray}}" bindchange="eduReqSelect">
                            <view wx:if="{{eduReq}}" class="weui-select">{{eduReq}}</view>
                            <view wx:else class="weui-select"></view>
                        </picker>
					</view>
				</view>
            </view>
        </view>
    </view>
    <view class="weui-cells__group weui-cells__group_form" style="margin:50rpx auto;">
        <view class="weui-cells__title">岗位待遇</view>
        <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-cells weui-cells_checkbox">
                <checkbox-group bindchange="treatmentChange">
                    <label class="weui-cell weui-cell_active weui-check__label" wx:for="{{treatmentArray}}" wx:key="*this">
                        <view class="weui-cell__hd">
                            <checkbox class="weui-check" value="{{item}}" />
                            <text class="weui-icon-checked"></text>
                        </view>
                        <view class="weui-cell__bd">
                            <view>{{item}}</view>
                        </view>
                    </label>
                </checkbox-group>
			</view>
        </view>
    </view>
    <view class="weui-cells__group weui-cells__group_form" style="margin:50rpx auto;">
        <view class="weui-cells__title">岗位详细要求</view>
        <view class="weui-cells weui-cells_form">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="请填写详细要求" placeholder-class="weui-input__placeholder" bindinput="detailInfoInput" />
                    <view class="weui-textarea-counter"><span>{{detailInfoLength}}</span>/200</view>
                </view>
            </view>
        </view>
    </view>
    <button type="primary" style="margin-bottom:200rpx" bindtap="submit">上传</button>
</view>