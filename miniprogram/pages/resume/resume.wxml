<view class="page" data-weui-theme="{{theme}}">
    <form>
        <view class="weui-form">
            <view class="weui-form__text-area">
                <view class="weui-form__title">填写简历</view>
            </view>
            <view class="weui-form__control-area">
                <view class="weui-cells__group weui-cells__group_form">
                    <view class="weui-cells weui-cells_form">
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">姓名</label>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" placeholder-class="weui-input__placeholder" placeholder="请输入姓名" maxlength="15" type="text" confirm-type="done" bindinput="nameInput" />
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">							
                                <label class="weui-label">性别</label>
                            </view>
                            <view class="weui-cell__bd">
                                <radio-group bindchange="sexSelect">
                                    <radio value="男">男</radio>
                                    <radio value="女">女</radio>
                                </radio-group>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-after">
                            <view class="weui-cell__hd">
                                <label class="weui-label">出生日期</label>
                            </view>
                            <view class="weui-cell__bd">
                                <picker class="weui-select" mode="date" value="2000-06-15" start="1970-01-01" end="2010-12-31" bindchange="birthSelect">
                                    <text wx:if="{{!birth}}">点击选择出生日期</text>
                                    <text style="color:black" wx:else>{{birth}}</text>
                                </picker>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-after">
                            <view class="weui-cell__hd">
                                <label class="weui-label">学历</label>
                            </view>
                            <view class="weui-cell__bd">
                                <picker class="weui-select" value="2" range="{{eduBg}}" bindchange="selectEduBg">
                                    <text wx:if="{{!eduBgIndex}}">点击选择学历</text>
                                    <text style="color:black" wx:else>{{edubg}}</text>
                                </picker>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">							
                                <label class="weui-label">工作意向</label>
                            </view>
                            <view class="weui-cell__bd">
                                对接数据库
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-after">
                            <view class="weui-cell__hd">
                                <label class="weui-label">工作经验</label>
                            </view>
                            <view class="weui-cell__bd">
                                <picker class="weui-select" value="4" range="{{workExp}}" bindchange="selectWorkExp">
                                    <text wx:if="{{!workExpIndex}}">点击选择工作经验</text>
                                    <text style="color:black" wx:else>{{workexp}}</text>
                                </picker>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">手机号</label>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" placeholder-class="weui-input__placeholder" placeholder="请输入手机号" maxlength="11" type="number" bindinput="telInput" />
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">当前住址</label>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" placeholder-class="weui-input__placeholder" placeholder="请输入详细地址" maxlength="40" type="text" confirm-type="done" bindinput="addressInput" />
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">自我介绍</label>
                            </view>
                            <view class="weui-cell__bd">
                                <textarea class="weui-input" placeholder-class="weui-input__placeholder" rows="3" bindinput="introInput" auto-height />
                            </view>
                        </view>
                    </view>
                </view>
            </view>
            <view class="weui-form__opr-area" style="display:flex">
                <button size="mini" style="width:150rpx;height:70rpx;display:flex;align-items:center;justify-content:center;" type="primary" form-type="submit" bindtap="submitBtn">保存</button>
                <button size="mini" style="width:150rpx;height:70rpx;display:flex;align-items:center;justify-content:center;" form-type="reset" bindtap="resetBtn">重置</button>
            </view>
        </view>
    </form>
</view>