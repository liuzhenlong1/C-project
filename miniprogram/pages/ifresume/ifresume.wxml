<view class="box" wx:if="{{isResume == 1}}">
    <view class="page" data-weui-theme="{{theme}}">
        <view class="weui-form">
            <view class="weui-form__text-area">
                <view class="weui-form__title">我的简历</view>
            </view>
            <view class="weui-form__control-area">
                <view class="weui-cells__group weui-cells__group_form">
                    <view class="weui-cells weui-cells_form">
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">姓名</label>
                            </view>
                            <view class="weui-cell__bd">
                                <text>{{name}}</text>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">							
                                <label class="weui-label">性别</label>
                            </view>
                            <view class="weui-cell__bd">
                                <text>{{sex}}</text>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">出生日期</label>
                            </view>
                            <view class="weui-cell__bd">
                                <text>{{birth}}</text>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">学历</label>
                            </view>
                            <view class="weui-cell__bd">
                                <text>{{edubg}}</text>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">工作经验</label>
                            </view>
                            <view class="weui-cell__bd">
                                <text>{{workexp}}</text>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">手机号</label>
                            </view>
                            <view class="weui-cell__bd">
                                <text>{{tel}}</text>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">当前住址</label>
                            </view>
                            <view class="weui-cell__bd">
                                <text>{{address}}</text>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_active">
                            <view class="weui-cell__hd">
                                <label class="weui-label">自我介绍</label>
                            </view>
                            <view class="weui-cell__bd">
                                <text>{{intro}}</text>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
            <view class="weui-form__opr-area" wx:if="{{confirm}}">
                <button type="primary" bindtap="submitBtn">确认报名</button>
            </view>
        </view>
    </view>
</view>
<view wx:if="{{isResume == 0}}">
    <view style="text-align:center;margin:50rpx 0">您当前没有简历</view>
    <button type="primary" bindtap="goTo">前往填写</button>
</view>