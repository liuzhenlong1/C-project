<Tabs tabs="{{tabs}}" binditemChange="handleItemChange"></Tabs>
<block wx:for="{{item.length}}" wx:for-item="x" wx:key="id">
    <navigator url="null">
        <view class="item_content" bindtap="itemClick" data-index="{{index}}">
            <view class="item_jobs">{{item[x].jobs}}</view>
            <view class="item_company">{{item[x].company}}</view>
            <view class="item_treatment">
                <view class="item_salary">{{item[x].salary}}</view>
                <view class="item_treatmentlist">
                    <block wx:for="{{item[x].treatment.length}}" wx:for-item="y" wx:key="*this">
                        <view class="item_treatmentitem" >{{item[x].treatment[y]}}</view>
                    </block>
                </view>
            </view>
        </view>
    </navigator>
</block>