.item_content {
  width: 90%;
  margin: 30rpx auto;
  padding: 20rpx;
  background-color: #f5f5f5;
  box-shadow: 0 5rpx 20rpx #808080;
}
.item_jobs {
  line-height: 70rpx;
  font-weight: bold;
}
.item_company {
  color: #808080;
}
.item_treatment {
  display: flex;
  height: 70rpx;
}
.item_salary {
  color: red;
  flex: auto;
  line-height: 70rpx;
}
.item_treatmentlist {
  flex: auto;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.item_treatmentitem {
  color: white;
  display: inline-flex;
  justify-content: center;
  font-size: 20rpx;
  padding: 10rpx;
  margin-left: 10rpx;
  background-color: #1e90ff;
  border-radius: 10rpx;
}