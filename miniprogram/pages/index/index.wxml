<view class="banner">
    <swiper autoplay circular indicator-dots indicator-color="rgba(255, 255, 255, .5)" indicator-active-color="#1e90ff" interval="3000">
        <block wx:for="{{bannerUrl}}" wx:key="*this">
            <swiper-item>
                <image src="{{item}}" mode="widthFix" />
            </swiper-item>
        </block>
    </swiper>
</view>
<view class="iconlist">  
    <block wx:for="{{iconList}}" wx:key="index">
        <navigator url="{{item[0]}}"><image src="{{item[1]}}" mode="widthFix" />
            <text>{{index}}</text>
        </navigator>
    </block>
</view>
<view class="item">
    <view class="title">『招聘信息』</view>
    <Tabs tabs="{{tabs}}" binditemChange="handleItemChange"></Tabs>
    <block wx:for="{{item.length}}" wx:for-item="x" wx:key="id">
        <navigator url="{{item[x].url}}">
            <view class="item_content" bindtap="itemClick" data-index="{{index}}">
                <view class="item_jobs">{{item[x].jobs}}</view>
                <view class="item_company">{{item[x].company}}</view>
                <view class="item_treatment">
                    <view class="item_salary">{{item[x].salary}}</view>
                    <view class="item_treatmentlist">
                        <block wx:for="{{item[x].treatment.length}}" wx:for-item="y" wx:key="*this">
                            <view class="item_treatmentitem">{{item[x].treatment[y]}}</view>
                        </block>
                    </view>
                </view>
            </view>
        </navigator>
    </block>
</view>