<view class="banner">
    <swiper autoplay circular indicator-dots indicator-color="rgba(255, 255, 255, .5)" indicator-active-color="#1e90ff" interval="3000">
        <block wx:for="{{bannerUrl}}" wx:key="*this">
            <swiper-item>
                <image src="{{item}}" mode="widthFix" />
            </swiper-item>
        </block>
    </swiper>
</view>
<view class="box">
    <text class="title">招聘简介</text>
    <view class="intro">
        <text>{{inTro}}</text>
        <block wx:for="{{introText}}" wx:key="*this">
            <text wx:if="{{intromore}}">{{item}}</text>
        </block>
    </view>
    <view class="intro_more" bindtap="introMore">
        <text wx:if="{{intromore}}">点击收起</text>
        <text wx:else>点击展开</text>
    </view>
</view>
<view class="iconlist">
    <block wx:for="{{iconList}}" wx:key="index">
        <navigator url="{{item[0]}}"><image src="{{item[1]}}" mode="widthFix" /><text>{{index}}</text></navigator>
    </block>
</view>
<view class="careers">
    <text class="title">招聘岗位</text>
    <view calss="menuJob">
        <navigator class= "b" url="../jobDetail/jobDetail">
        <view class="a">
            <view class="jobNameAndSal">
                <view class="name">
                    <text class="a1">酒店服务生</text> 
                </view>
                <view class="salary">
                    <text>100元/天</text>
                </view>
            </view>
            <view class="companyAndAdd">
                <view class="company">
                    <text>公司名称：天津职业技术师范大学</text>
                </view>
                <view class="add">
                    <text>天津津南</text>
                </view>  
            </view>
            <view class="treatments">   
                <view class="one">
                    <text>包三餐</text>
                </view>
                <view class="one">
                    <text>接送</text>
                </view>
                <view class="one">
                    <text>年终奖</text>
                </view>
            </view> 
        </view>
    </navigator>
    </view>
</view>