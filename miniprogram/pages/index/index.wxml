<view class="banner">
    <swiper autoplay circular indicator-dots indicator-color="rgba(255, 255, 255, .5)" indicator-active-color="#1e90ff" interval="3000">
        <block wx:for="{{bannerUrl}}" wx:key="*this">
            <swiper-item>
                <image src="{{item}}" mode="widthFix" />
            </swiper-item>
        </block>
    </swiper>
</view>

<view class="iconlist">  
    <block wx:for="{{iconList}}" wx:key="index">
        <navigator url="{{item[0]}}"><image src="{{item[1]}}" mode="widthFix" />
            <text>{{index}}</text>
        </navigator>
    </block>
</view>

<view class="careers">
    <text class="title">招聘岗位</text>
</view>

<Tabs tabs="{{tabs}}" binditemChange="handleItemChange"></Tabs>
<block calss="menuJob" wx:if="{{index == 0}}"> 
    <navigator class= "b" url="../jobDetail/jobDetail">
        <view class="a">
            <view class="jobNameAndSal">
                <view class="name">
                    <text class="a1">酒店服务生</text> 
                </view>
                <view class="salary">
                    <text>100元/天</text>
                </view>
                <view class="partOrAllJob">
                    <text>兼职</text>
                </view>
            </view>
            <view class="companyAndAdd">
                <view class="company">
                    <text>公司名称：天津职业技术师范大学</text>
                </view>
                <view class="add">
                    <text>天津津南</text>
                </view>  
            </view>
            <view class="treatments">   
                <view class="one" wx:for="{{treatments}}">
                    <text>{{item}}</text>
                </view>
            </view> 
        </view>
    </navigator>
</block>
