.banner swiper {
    height: calc(100vw * 280 / 520);
}
.banner image {
    width: 100%;
}
.iconlist {
    margin-top: 15rpx;
    display: flex;
    justify-content: space-around;
}
.iconlist navigator {
    width: 20%;
    text-align: center;
}
.iconlist navigator image {
    margin-top: 10rpx;
    width: 60%;
}
.iconlist navigator text {
    display: block;
    font-size: 25rpx;
}
.item {
    margin-top: 30rpx;
    margin-bottom: 100rpx;
}
.title {
    line-height: 100rpx;
    font-size: 40rpx;
    color: #1e90ff;
    border-bottom: 2px dotted currentColor;
    text-align: center;
}
.item_content {
    width: 95%;
    margin: 20rpx auto;
    border-radius: 20px;
    border: 2px solid #dcdcdc;
}
.item_company {
    text-align: center;
    line-height: 80rpx;
    border-bottom: 2px solid #dcdcdc;
    box-sizing: border-box;
}
.item_jobs {
    border-right: 1px solid #dcdcdc;
}
.item_salary {
    border-left: 1px solid #dcdcdc;
}
.item_jobs_salary {
    color: red;
    display: inline-flex;
    width: 50%;
    height: 70rpx;
    justify-content: center;
    align-items: center;
    border-bottom: 2px solid #dcdcdc;
    box-sizing: border-box;
}
.item_extra {
    padding: 20rpx;
    border-bottom: 2px solid #dcdcdc;
}
.item_treatment {
    display: flex;
    height: 80rpx;
    justify-content: space-around;
    align-items: center;
}
.item_treatmentitem {
    font-size: 25rpx;
    width: 100rpx;
    text-align: center;
    line-height: 50rpx;
    color: white;
    background-color: #1e90ff;
    border-radius: 10px;
    padding: 5px;
}