<view class="container"> 
    <view class="login-icon"> 
        <image class="login-img" src="../../images/demo.png"></image> 
    </view> 
    <view class="login-from"> 
        <view class="inputView"> 
            <view><image class="nameImage" src="../../images/loginName.png"/></view>
            <view><label class="loginLab">账号</label> </view>
            <view><input class="inputText" placeholder="请输入账号" bindinput="nameInput"/></view>    
        </view> 
        <view class="line"></view> 
        <view class="inputView"> 
            <view><image class="keyImage" src="../../images/login.png"></image> </view>
            <view><label class="loginLab">密码</label></view>
            <view><input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" /></view>
            
             
             
        </view> 
        <view class="loginBtnView"> 
            <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button> 
        </view> 
    </view> 
</view>